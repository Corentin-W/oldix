{% extends 'back_office/backoffice_base.html.twig' %}

{% block body %}
	<div class="container mt-3">
		<h1 class="text-center">List of languages
		</h1>
		<div class="d-flex justify-content-end">
			<a class="d-block btn btn-secondary " href="{{path("backoffice_languages_add")}}">Add a language</a>
		</div>

		<table class="table mt-2">
			<thead class="thead-dark">
				<tr>
					<th class="text-center" scope="col">#</th>
					<th class="text-center" scope="col">Name</th>
					<th class="text-center" scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for language in languages %}
					<tr>
						<th class="text-center" scope="row">{{language.id}}</th>
						<td class="text-center">{{language.name}}</td>
						<td class="d-flex justify-content-center">
							<a class="d-block btn btn-warning mr-3" href="{{path("backoffice_languages_edit", {"slug": language.slug})}}">
								Edit
							</a>
							{# {% if is_granted("category_delete", category) %} #}
							<a class="d-block btn btn-danger" href="{{path("backoffice_languages_delete", {"slug": language.slug})}}">
								Delete
							</a>
							{# {% endif %} #}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
			<div class="row navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(languages) }}
			</div>
	</div>


{% endblock %}
