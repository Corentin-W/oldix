{% extends 'back_office/backoffice_base.html.twig' %}

{% block body %}
	<div class="container mt-3">
		<h1 class="text-center">List of thematics
		</h1>
		<div class="d-flex justify-content-end">
			<a class="d-block btn btn-secondary " href="{{path("backoffice_thematics_add")}}">Add a thematic</a>
		</div>

		<table class="table mt-2">
			<thead class="thead-dark">
				<tr>
					<th class="text-center" scope="col">#</th>
					<th class="text-center" scope="col">Name</th>
					<th class="text-center" scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for article in pagination %}
					<tr>
						<th class="text-center" scope="row">{{article.id}}</th>
						<td class="text-center">{{article.name}}</td>
						<td class="d-flex justify-content-center">
							{% if is_granted("thematic-delete", article) %}

								<a class="d-block btn btn-warning mr-3" href="{{path("backoffice_thematics_edit", {"slug": article.slug})}}">
									Edit
								</a>
							{% endif %}

							{% if is_granted("thematic-delete", article) %}
								<a class="d-block btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');" href="{{path("backoffice_thematics_delete", {"slug": article.slug})}}">
									Delete
								</a>
							{% endif %}
					
						</td>
						
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<th class="navigation">
						{{ knp_pagination_render(pagination) }}
					</th>
				</tr>
			</tfoot>

		</table>

	</div>
{% endblock %}
